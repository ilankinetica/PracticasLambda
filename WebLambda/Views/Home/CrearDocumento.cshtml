<div>
    <h2>Crear un nuevo documento</h2>
    <form method="POST" action="insertarDocumentoEnBDD">
        <label for="Titulo">Titulo:</label>
        <input type="text" name="Titulo" />
        <br />
        <label for="Cuerpo">Cuerpo:</label>
        <input type="text" name="Cuerpo" />
        <br />
        <br />
        <label for="NumeroFirmantes">Seleccione numero de firmantes a agregar:</label>
        <input type="number" max="120" min="1" id="NumeroFirmantes" name="NumeroFirmantes" />
        <div id="Firmantes">

        </div>
        <script type="text/javascript">
            $(function () {
                $("#NumeroFirmantes").on("change", function () {
                    var cantidadFirmantes = $("#NumeroFirmantes").val();
                    for (var i = 0; i < cantidadFirmantes; i++) {
                        
                        $.get('@Url.Action("DatosFirmante")').success(function (data) {
                            $("#Firmantes").html(data);
                        });
                    }
                });
            });
        </script>
        <input type="submit" value="Enviar" />
    </form>
</div>
